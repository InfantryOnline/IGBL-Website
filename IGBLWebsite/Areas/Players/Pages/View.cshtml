<table align="center" border="0" cellpadding="0" cellspacing="1" width="95%">

    <tbody>
        <tr>
            <td colspan="8" class="PlayerProfileDisplayType"><a href="index.cfm?FuseAction=PlayerProfile&amp;User_PK=8&amp;StatType=Cumulative">Cumulative Totals</a></td>
            <td colspan="10" class="PlayerProfileDisplayType" align="right"><a href="index.cfm?FuseAction=PlayerProfile&amp;User_PK=8&amp;StatType=PerMinute">Per Minute Totals</a></td>
        </tr>

        <tr>
            <td class="PlayerProfileStatsHeading">&nbsp;</td>
            <td class="PlayerProfileStatsHeading">Squad</td>
            <td class="PlayerProfileStatsHeading">Wins</td>
            <td class="PlayerProfileStatsHeading">Losses</td>
            <td class="PlayerProfileStatsHeading">Minutes</td>
            <td class="PlayerProfileStatsHeading">Kills</td>
            <td class="PlayerProfileStatsHeading">Deaths</td>
            <td class="PlayerProfileStatsHeading">Goals</td>
            <td class="PlayerProfileStatsHeading">Assists</td>
            <td class="PlayerProfileStatsHeading">Catches</td>
            <td class="PlayerProfileStatsHeading">Passes</td>
            <td class="PlayerProfileStatsHeading">Steals</td>
            <td class="PlayerProfileStatsHeading">Fumbles</td>
            <td class="PlayerProfileStatsHeading">Saves</td>
            <td class="PlayerProfileStatsHeading">Pinches</td>
            <td class="PlayerProfileStatsHeading">Carry Time</td>
            <td class="PlayerProfileStatsHeading">MVPs</td>
            <td class="PlayerProfileStatsHeading">Rating</td>
        </tr>

        @foreach(var statsEntry in Model.Player.SeasonStatEntries)
        {
        <tr>
            <td class="PlayerProfileStatsRow1">@statsEntry.Season.SeasonName</td>
            <td class="PlayerProfileStatsRow1"><a href="/squads/@statsEntry.Squad.SquadPk">@statsEntry.Squad.SquadName</a></td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Wins</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Losses</td>
            <td class="PlayerProfileStatsRow1">@(statsEntry.Stats.PlaySeconds/60)</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Kills</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Deaths</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Goals</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Assists</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Catches</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Passes</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Steals</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Fumbles</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Saves</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.Pinches</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.CarryTime</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Stats.MatchMvps</td>
            <td class="PlayerProfileStatsRow1">@statsEntry.Rating.ToString("0.##")</td>
        </tr>
        }

        <tr>
            <td class="PlayerProfileCareerTotals" colspan="2">Career Totals</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Wins)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Losses)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.PlaySeconds/60)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Kills)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Deaths)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Goals)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Assists)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Catches)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Passes)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Steals)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Fumbles)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Saves)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.Pinches)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.CarryTime)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.SeasonStatEntries.Sum(y => y.Stats.MatchMvps)</td>
            <td class="PlayerProfileCareerTotals">@Model.Player.CareerRating.ToString("0.##")</td>
        </tr>

    </tbody>
</table>